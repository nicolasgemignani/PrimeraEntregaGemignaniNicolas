<main>
    <div class="container">
        <h1>Register</h1>
        <form action="/api/sessions/register" method="post" class="form-group w-50">
            <label for="first_name">Nombre</label>
            <input type="text" id="first_name" name="first_name" class="form-control" placeholder="Introduzca Nombre" required>

            <label for="last_name">Apellido</label>
            <input type="text" id="last_name" name="last_name" class="form-control" placeholder="Ingrese el apellido" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Ingrese Email" required>

            <label for="password">Contrase√±a</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Ingrese password" required>

            <button type="submit" class="btn btn-primary">Enviar</button>
            <a href="/login" class="btn btn-link">Login</a>
        </form>
    </div>
</main>
